{
  "name": "VTT2Minutes Python Development",
  "build": {
    "dockerfile": "Dockerfile",
    "options": ["--no-cache"]
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/aws-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {},
    "ghcr.io/devcontainers-extra/features/direnv:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-vscode.vscode-json",
        "streetsidesoftware.code-spell-checker",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/.cargo/bin/python",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        },
        "files.associations": {
          "*.vtt": "plaintext"
        }
      }
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "uv sync --frozen --extra dev && ./scripts/setup-hooks.sh && echo 'eval \"$(direnv hook bash)\"' >> ~/.bashrc",
  "postStartCommand": "curl -fsSL https://claude.ai/install.sh | bash && ./scripts/setup-claude-plugins.sh",
  "remoteUser": "vscode"
}
